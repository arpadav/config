; --------------------------------------------------
; base .gitconfig
; --------------------------------------------------
[user]
    name = arpadav
    email = arpadav@gmail.com
[core]
	fsyncObjectFiles = false
	editor = nvim
[submodule]
	recurse = true
[http]
	sslBackend = gnutls
	sslCAinfo = /etc/ssl/certs/ca-certificates.crt
	sslverify = false

; --------------------------------------------------
; for all under `github.com`
; --------------------------------------------------
[includeIf "gitdir:~/github.com/**"]
    path = ~/.gitconfig-github.com

; --------------------------------------------------
; for all under `gitlab.jhuapl.edu`
; --------------------------------------------------
[includeIf "gitdir:~/gitlab.jhuapl.edu/**"]
    path = ~/.gitconfig-gitlab.jhuapl.edu

